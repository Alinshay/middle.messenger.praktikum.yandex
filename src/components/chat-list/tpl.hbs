{{#if mode}}
    {{#each chats.chatList}}
        <button class="chat-list__item">
            <div class="avatar_sm"></div>
            <div class="item__info">
                <div class="info__title info__title_search">
                    <h3>{{{name}}}</h3>
                </div>
            </div>
        </button>
    {{/each}}
{{else}}
    {{#each chats.chatList}}
        <button class="chat-list__item">
            <div class="avatar_sm"></div>
            <div class="item__info">
                <div class="info__title">
                    <h3>{{{name}}}</h3>
                    <time class="title__last-message-time">
                        {{{time}}}
                    </time>
                </div>
                <div class="info__subtitle">
                    <p class="subtitle__last-message"> {{{lastMessage}}}</p>
                    {{#if badge}}
                        <span class="subtitle__message-badge"> {{{badge}}} </span>
                    {{/if}}
                </div>
            </div>
        </button>
    {{/each}}
{{/if}}
